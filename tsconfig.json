{
    "compilerOptions": {
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "module": "commonjs",
      "noEmitOnError": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "pretty": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "rootDir": ".",
      "outDir": "out"
    },
    "exclude": [
      "node_modules",
      "dump"
    ],
    "include": [
      "src/**/*.ts",
      "test/**/*.ts",
      "src/types"
    ]
  }